{
  "name": "nodetron-core",
  "version": "0.0.1",
  "private": true,
  "description": "NodeTron core, essentials microservice for NodeTron",
  "scripts": {
    "postinstall": "husky install",
    "prestart": "rm -rf dist && tsc --build tsconfig.json",
    "start": "moleculer-runner -e -c dist/BrokerConfig.js ./dist/Service.js",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/**",
    "dev:network": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/network",
    "dev:data": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/data",
    "dev:control": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/control.ts",
    "dev:com": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/communication.ts",
    "dev:api": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/api.ts",
    "repl": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --repl --config src/BrokerConfig.ts src/services/**",
    "lint": "eslint --fix --ext .ts .",
    "dedup": "jscpd ./src",
    "commit": "cz",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EtienneSchmitz/nodetron-core"
  },
  "author": "Elektrons Innovants",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/mathjs": "^6.0.9",
    "@types/node": "^14.14.20",
    "@types/serialport": "^8.0.1",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^5.0.6",
    "standard-version": "^9.1.0"
  },
  "dependencies": {
    "@nodetron/types": "0.0.1-beta.8",
    "dotenv": "^8.2.0",
    "env-var": "^7.0.0",
    "mathjs": "^8.1.1",
    "moleculer": "0.14.12",
    "moleculer-repl": "^0.6.4",
    "protobufjs": "^6.10.2",
    "serialport": "^9.0.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "ws": "^7.4.2"
  },
  "engines": {
    "node": ">= 14.x.x"
  }
}
