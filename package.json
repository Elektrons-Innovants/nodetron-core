{
  "name": "nodetron-core",
  "version": "0.0.1",
  "private": true,
  "description": "NodeTron core, essentials microservice for NodeTron",
  "scripts": {
    "postinstall": "husky install",
    "prestart": "rm -rf dist && tsc --build tsconfig.json",
    "start": "moleculer-runner -e -c dist/BrokerConfig.js ./dist/Service.js",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --config src/BrokerConfig.ts src/services/**/*.service.ts",
    "repl": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot -e --repl --config src/BrokerConfig.ts src/services/**/*.service.ts",
    "lint": "eslint --fix --ext .ts .",
    "dedup": "jscpd ./src",
    "commit": "cz",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NAELIC/nodetron-core"
  },
  "author": "NAELIC",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/mathjs": "^6.0.11",
    "@types/node": "^14.14.25",
    "@types/serialport": "^8.0.1",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^5.0.8",
    "standard-version": "^9.1.0"
  },
  "dependencies": {
    "@nodetron/math": "^0.0.1-beta.7",
    "@nodetron/types": "0.0.1-beta.21",
    "@nodetron/util": "^0.0.1-beta.8",
    "dotenv": "^8.2.0",
    "env-var": "^7.0.0",
    "mathjs": "^9.2.0",
    "moleculer": "0.14.12",
    "moleculer-repl": "^0.6.4",
    "protobufjs": "^6.10.2",
    "serialport": "^9.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "ws": "^7.4.3"
  },
  "engines": {
    "node": ">= 14.x.x"
  }
}
